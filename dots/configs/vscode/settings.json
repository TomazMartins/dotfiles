{
    "atomKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.formatOnPaste": true,
    "editor.lineHeight": 17,
    "editor.fontFamily": "'FiraCode Nerd Font', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "terminal.integrated.fontLigatures.enabled": true,
    "editor.tabSize": 2,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80
    ],
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Cobalt2",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "comments",
                "scope": "comment",
                "settings": {
                    "foreground": "#5C6370"
                }
            },
            {
                "name": "String",
                "scope": "string",
                "settings": {
                    "foreground": "#2F9D66"
                }
            },
            {
                "name": "Number",
                "scope": "constant.numeric",
                "settings": {
                    "foreground": "#FF0000"
                }
            },
            {
                "name": "Built-in constant",
                "scope": "constant.language",
                "settings": {
                    "foreground": "#2277FA",
                    "fontStyle": "bold"
                }
            },
            {
                "name": "User-defined constant",
                "scope": [
                    "constant.character",
                    "constant.other"
                ],
                "settings": {
                    "foreground": "#0A87C6"
                }
            },
            {
                "name": "Variable",
                "scope": "variable",
                "settings": {
                    "foreground": "#ABB2BF"
                }
            },
            {
                "name": "Keyword",
                "scope": "keyword",
                "settings": {
                    "foreground": "#2277ff",
                    "fontStyle": "bold"
                }
            },
            {
                "name": "Storage",
                "scope": "storage",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#225588"
                }
            },
            {
                "name": "Storage type",
                "scope": "storage.type",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#9966b8"
                }
            },
            {
                "name": "Class name",
                "scope": [
                    "entity.name.class",
                    "entity.name.type"
                ],
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#E5C07B"
                }
            },
            {
                "name": "Inherited class",
                "scope": "entity.other.inherited-class",
                "settings": {
                    "foreground": "#E5C07B"
                }
            },
            {
                "name": "Function name",
                "scope": "entity.name.function",
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#D3AF37"
                }
            },
            {
                "name": "Function argument",
                "scope": "variable.parameter",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#2277ff"
                }
            },
            {
                "name": "Tag name",
                "scope": "entity.name.tag",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#225588"
                }
            },
            {
                "name": "Tag attribute",
                "scope": "entity.other.attribute-name",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#ddbb88"
                }
            },
            {
                "name": "Library function",
                "scope": "support.function",
                "settings": {
                    "foreground": "#50FA7B",
                    "fontStyle": "italic underline",
                }
            },
            {
                "name": "Library constant",
                "scope": "support.constant",
                "settings": {
                    "fontStyle": "italic underline",
                    "foreground": "#BD93F9"
                }
            },
            {
                "name": "Library class/type",
                "scope": [
                    "support.type",
                    "support.class"
                ],
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#9966b8"
                }
            },
            {
                "name": "Library variable",
                "scope": "support.other.variable",
                "settings": {
                    "fontStyle": ""
                }
            },
            {
                "name": "Invalid",
                "scope": "invalid",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#F8F8F0"
                }
            },
            {
                "name": "Invalid deprecated",
                "scope": "invalid.deprecated",
                "settings": {
                    "foreground": "#F8F8F0"
                }
            },
            {
                "name": "diff: header",
                "scope": [
                    "meta.diff",
                    "meta.diff.header"
                ],
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#E0EDDD"
                }
            },
            {
                "name": "diff: deleted",
                "scope": "markup.deleted",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#dc322f"
                }
            },
            {
                "name": "diff: changed",
                "scope": "markup.changed",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#cb4b16"
                }
            },
            {
                "name": "diff: inserted",
                "scope": "markup.inserted",
                "settings": {
                    "foreground": "#219186"
                }
            },
            {
                "name": "Markup Quote",
                "scope": "markup.quote",
                "settings": {
                    "foreground": "#22aa44"
                }
            },
            {
                "name": "Markup Styling",
                "scope": [
                    "markup.bold",
                    "markup.italic"
                ],
                "settings": {
                    "foreground": "#22aa44"
                }
            },
            {
                "name": "Markup Inline",
                "scope": "markup.inline.raw",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#9966b8"
                }
            },
            {
                "name": "Markup Setext Header",
                "scope": "markup.heading.setext",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#ddbb88"
                }
            }
        ]
    },
    "workbench.startupEditor": "newUntitledFile",
    "files.associations": {
        "*.jbuilder": "ruby"
    },
    "explorer.confirmDelete": false,
    "liveshare.featureSet": "insiders",
    "rubyTestExplorer.testFramework": "rspec",
    "dateTime.showDayOfWeek": true,
    "dateTime.showDayOfMonth": true,
    "dateTime.showMonth": true,
    "dateTime.showAMPM": true,
    "explorer.confirmDragAndDrop": false,
    "editor.minimap.maxColumn": 60,
    "color-highlight.languages": [
        "*"
    ],
    "workbench.iconTheme": "material-icon-theme",
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "security.workspace.trust.untrustedFiles": "open",
    "editor.fontSize": 12,
    "editor.cursorBlinking": "smooth",
    // COPILOT GUIDELINES ========================================================
    "github.copilot.chat.codeGeneration.useInstructionFiles": false,
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "file": ".github/copilot-guidelines/copilot-commit-message-guidelines.md"
        }
    ],
    "github.copilot.chat.codeGeneration.instructions": [
        {
            "file": ".github/copilot-guidelines/copilot-code-generation-guidelines.md"
        },
        {
            "file": ".github/copilot-guidelines/copilot-coding-style-guidelines.md"
        },
        {
            "file": ".github/copilot-guidelines/copilot-application-guidelines.md"
        }
    ],
    "github.copilot.chat.testGeneration.instructions": [
        {
            "file": ".github/copilot-guidelines/copilot-test-generation-guidelines.md"
        }
    ],
    "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
        {
            "file": ".github/copilot-guidelines/copilot-pull-request-description-guidelines.md"
        }
    ],
    "workbench.tree.indent": 12,
    "chat.fontSize": 10,
}
